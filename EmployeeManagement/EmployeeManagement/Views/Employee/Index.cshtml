
@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<div class="bg-secondary p-4 mt-4 rounded">
    <div class="bg-light pb-2">
        <p class="text-dark text-center fs-4 fw-bold py-2">List of Employee</p>
        <table class="table table-striped table-hover">
   <thead>
    <tr>
      <th scope="col" style="font-size:13px">Name</th>
      <th scope="col" style="font-size:13px">Email</th>
      <th scope="col" style="font-size:13px">Address</th>
      <th scope="col" style="font-size:13px">Department</th>
      <th scope="col" style="font-size:13px">Designition</th>
      <th scope="col" style="font-size:13px">DOB</th>
      <th scope="col" style="font-size:13px">Gender</th>
      <th scope="col" style="font-size:13px">Date of Join</th>
      <th scope="col" style="font-size:13px">Salary</th>
      <th scope="col" style="font-size:13px">Married Status</th>
      <th scope="col" style="font-size:13px">Country</th>
      <th scope="col" style="font-size:13px">Action</th>
    </tr>
  </thead>
  <tbody>
      @for(int i=0;i<Model.Rows.Count;i++){
    <tr>
      <td style="font-size:13px">@Model.Rows[i][1]</td>
      <td style="font-size:13px">@Model.Rows[i][2]</td>
           <td style="font-size:13px">@Model.Rows[i][3]</td>
         <td style="font-size:13px">@Model.Rows[i][4]</td>
            <td style="font-size:13px">@Model.Rows[i][5]</td>
            <td style="font-size:13px">@Model.Rows[i][6]</td>
           <td style="font-size:13px">@Model.Rows[i][7]</td>
           <td style="font-size:13px">@Model.Rows[i][8]</td>
            <td style="font-size:13px">@Model.Rows[i][9]</td>
            <td style="font-size:13px">@Model.Rows[i][10]</td>
           <td style="font-size:13px">@Model.Rows[i][11]</td>
      <td>
         <a href="@Url.Action("Edit","Employee",new {@id=@Model.Rows[i][0]})"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="@Url.Action("Delete","Employee",new {@id=@Model.Rows[i][0]})"> <i class="fa fa-trash-o" aria-hidden="true"></i></a>
      </td>
    </tr>
    }
  </tbody>
</table>
<a href="@Url.Action("Create","Employee")" class="bg-primary shadow-sm rounded mx-2 my-2 text-white p-2">Add Employee</a>
<nav aria-label="Page navigation example" class="px-2">
  <ul class="pagination justify-content-end">
    <li class="page-item disabled">
      <a class="page-link">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>
     </div>
</div>

